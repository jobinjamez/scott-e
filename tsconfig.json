{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "removeComments": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noEmit": true,

    "lib": [
      "es6",
      "es7",
      "dom"
    ]
  },
  "exclude": [
    "build",
    "__tests__",
    "node_modules",
    "android",
    "ios"
  ]
}